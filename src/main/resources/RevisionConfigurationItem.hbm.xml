<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="br.uff.ic.labgc.storage.RevisionConfigurationItem" table='"LABGC"t_revision_ci'>
      <composite-id name="id" class="br.uff.ic.labgc.storage.RevisionConfigurationItemId"> 
         <key-property    name="revisionId"     column="revision_id"/>
         <key-property    name="configItemId"   column="ci_id"/> 
      </composite-id>
      
      <many-to-one name="revision" class="br.uff.ic.labgc.storage.Revision"
                   insert="false" update="false">
         <column name="revision_id"/>
      </many-to-one>
      <many-to-one name="configItem" class="br.uff.ic.labgc.storage.ConfigurationItem"
                   insert="false" update="false">
         <column name="ci_id"/>
      </many-to-one>
  </class>
</hibernate-mapping>
